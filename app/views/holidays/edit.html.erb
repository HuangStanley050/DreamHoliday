<h1>Holidays#edit</h1>
<p>Find me in app/views/holidays/edit.html.erb</p>
<h1>Edit your Holiday</h1>
<%= form_with(model: @holiday, url:"/holidays/edit/#{@holiday.id}") do |f| %>
  <%= label_tag(:title, "The title")%>
  <%= f.text_field :title %>
  <%= label_tag(:description, "Description")%>
  <%= f.text_area :description, size: "60x12" %>
  <%= label_tag(:pictureUrl, "Picture Url")%>
  <%= f.label :picture %> <%= f.file_field :pictureUrl, accept:
  'image/png,image/gif,image/jpeg,image/jpg' %>
  <%= label_tag(:price, "Price")%>
  <%= f.text_field :price %>
  <%= f.submit "Create" %>
<% end %>
